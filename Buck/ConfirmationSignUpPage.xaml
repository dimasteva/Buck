<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Buck.ConfirmationSignUpPage"
             Title="ConfirmationSignUpPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label
            Text="Buck"
            Grid.Row="0"
            Grid.Column="0"
            FontSize="Header"
            HorizontalOptions="Center"
            />

        <Label
            Text=""
            Grid.Row="1"
            Grid.Column="0"
            VerticalOptions="Center"
            />

        <Entry
            x:Name="eCode"
            Grid.Row="2"
            Grid.Column="0"
            Placeholder="Enter the code"
            VerticalOptions="Center"
            WidthRequest="250"
            />

        <Button
            Grid.Row="3"
            Grid.Column="0"
            Text="Submit"
            Clicked="SubmitButtonClicked"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            />

    </Grid>
</ContentPage>